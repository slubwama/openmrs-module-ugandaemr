    <ifMode mode = "EDIT" > <!-- Handle edit logic for optional fields -->
        <script type="text/javascript">
            if (jQuery) {
                jq(document).ready(function () {
                    if (jq("#occupation").find("select").find(":selected").val() != "5622") {
                        jq("#other-occupation-container").hide();
                    }

                    if (jq("#country-of-residence").find("select").find(":selected").val() != "90002") {
                        jq("#other-country-of-residence-container").hide();
                    }

                    if (jq("#date-of-positive-lab-test").find("input[type='text']").val() == '') {
                        disable_fields("rdt-ag");
                        disable_fields("rdt-ab");
                        disable_fields("pcr");
                    }

                    if (jq("#is-patient-symptomatic").find("input[type='radio']:checked").val() != "90003") {
                        jq("#date-of-first-symptom-container").hide();
                    }

                    if (!jq(".symptoms").find('#other-bleeding-site').find(':checkbox').prop('checked')) {
                        jq("#other-bleeding-site-container").hide();
                    }

                    if (!jq(".symptoms").find('#other-symptoms').find(':checkbox').prop('checked')) {
                        jq("#other-symptoms-container").hide();
                    }

                    if (!jq(".comorbidities").find('#other-comorbidities').find(':checkbox').prop('checked')) {
                        jq("#other-comorbidities-container").hide();
                    }

                    if (!jq(".comorbidities").find('#hiv-status-check').find(':checkbox').prop('checked')) {
                        jq("#hiv-info-container").hide();
                    }

                    if (jq("#travel-history").find("input[type='radio']:checked").val() == "90003") {
                        if (jq("#mode-of-transport").find("select").find(":selected").val() != "166304") {
                            jq("#public-transport-means-container").hide();
                        }
                        if (jq("#travel-type").find("input[type='radio']:checked").val() == "166298") {
                            jq("#countries-container").hide();
                        } else if (jq("#travel-type").find("input[type='radio']:checked").val() == "166299") {
                            jq("#district-container").hide();
                            jq("#country-container").hide();
                        } else {
                            jq("#countries-container").hide();
                            jq("#district-container").hide();
                            jq("#country-container").hide();
                        }
                    } else {
                        jq("#travel-history-container").hide();
                    }

                    if (jq("#admit-to-hospital").find("input[type='radio']:checked").val() != "166317") {
                        jq("#admit-to-hospital-cases-container").hide();
                    }

                    if (jq("#admit-to-hospital-cases").find("select").find(":selected").val() != "90002") {
                        jq("#admit-to-hospital-specify-other-container").hide();
                    }
                });
            }
        </script>
    </ifMode>

    <script type="text/javascript">

        if (jQuery) {

            jq(document).ready(function () {
                //Block Multiple encounter entry on same date
                blockEncounterOnSameDateEncounter(jq("#encounterDate").find("input[type=hidden]"),"block");

                jq("#occupation").change(function () {
                    if (jq(this).find("select").find(":selected").val() == "5622") {
                        enable_fields("other-occupation");
                        jq("#other-occupation-container").show();
                    } else {
                        disable_fields("other-occupation");
                        jq("#other-occupation-container").hide();
                    }
                });

                jq("#country-of-residence").change(function () {
                    if (jq(this).find("select").find(":selected").val() == "90002") {
                        enable_fields("other-country-of-residence");
                        jq("#other-country-of-residence-container").show();
                    } else {
                        disable_fields("other-country-of-residence");
                        jq("#other-country-of-residence-container").hide();
                    }
                });

                jq("#date-of-positive-lab-test").change(function () {
                    if (jq(this).find("input[type='text']").val() != '') {
                        enable_fields("rdt-ag");
                        enable_fields("rdt-ab");
                        enable_fields("pcr");
                    } else {
                        disable_fields("rdt-ag");
                        disable_fields("rdt-ab");
                        disable_fields("pcr");
                    }
                });

                jq("#is-patient-symptomatic").click(function () {
                    if (jq(this).find("input[type='radio']:checked").val() == "90003") {
                        enable_fields("date-of-first-symptom");
                        jq("#date-of-first-symptom-container").show();
                    } else {
                        disable_fields("date-of-first-symptom");
                        jq("#date-of-first-symptom-container").hide();
                    }
                });

                jq(".symptoms").change(function () {
                    if (jq(this).find('#other-bleeding-site').find(':checkbox').prop('checked')) {
                        enable_fields("specify-other-bleeding-site");
                        jq("#other-bleeding-site-container").show();
                    } else {
                        disable_fields("specify-other-bleeding-site");
                        jq("#other-bleeding-site-container").hide();
                    }

                    if (jq(this).find('#other-symptoms').find(':checkbox').prop('checked')) {
                        enable_fields("specify-other-symptoms");
                        jq("#other-symptoms-container").show();
                    } else {
                        disable_fields("specify-other-symptoms");
                        jq("#other-symptoms-container").hide();
                    }
                });

                jq("#pregnancy").click(function () {
                    if (jq(this).find("input[type='radio']:checked").val() == "1065"){
                        enable_fields("post-partum");
                        enable_fields("breast-feeding");
                        enable_fields("gestational-age");
                        enable_fields("trimester");
                        jq("#pregnancy-details-container").show();
                    } else {
                        disable_fields("post-partum");
                        disable_fields("breast-feeding");
                        disable_fields("gestational-age");
                        disable_fields("trimester");
                        jq("#pregnancy-details-container").hide();
                    }
                });

                jq(".comorbidities").change(function () {
                    if (jq(this).find('#other-comorbidities').find(':checkbox').prop('checked')) {
                        enable_fields("specify-other-comorbidities");
                        jq("#other-comorbidities-container").show();
                    } else {
                        disable_fields("specify-other-comorbidities");
                        jq("#other-comorbidities-container").hide();
                    }

                    if (jq(this).find('#hiv-status-check').find(':checkbox').prop('checked')) {
                        jq("#hiv-info-container").show();
                        enable_fields("hiv-treatment-check");
                    } else {
                        jq("#hiv-info-container").hide();
                        disable_fields("hiv-treatment-check");
                    }
                });

                jq("#travel-history").click(function () {
                    if (jq(this).find("input[type='radio']:checked").val() == "90003") {
                        enable_fields("country");
                        enable_fields("city");
                        enable_fields("date-of-arrival");
                        enable_fields("date-of-departure");
                        enable_fields("travel-type");
                        enable_fields("district");
                        enable_fields("county");
                        enable_fields("countries-traveled");
                        enable_fields("mode-of-transport");
                        enable_fields("public-transport-means");
                        jq("#travel-history-container").show();
                    } else {
                        disable_fields("country");
                        disable_fields("city");
                        disable_fields("date-of-arrival");
                        disable_fields("date-of-departure");
                        disable_fields("travel-type");
                        disable_fields("district");
                        disable_fields("county");
                        disable_fields("countries-traveled");
                        disable_fields("mode-of-transport");
                        disable_fields("public-transport-means");
                        jq("#travel-history-container").hide();
                    }
                });

                jq("#mode-of-transport").change(function () {
                    if (jq(this).find("select").find(":selected").val() == "166304") {
                        enable_fields("public-transport-means");
                        jq("#public-transport-means-container").show();
                    } else {
                        disable_fields("public-transport-means");
                        jq("#public-transport-means-container").hide();
                    }
                });

                jq("#travel-type").click(function () {
                    if (jq(this).find("input[type='radio']:checked").val() == "166298") {
                        enable_fields("district");
                        enable_fields("county");
                        jq("#district-container").show();
                        jq("#country-container").show();
                    } else {
                        disable_fields("district");
                        disable_fields("county");
                        jq("#district-container").hide();
                        jq("#country-container").hide();
                    }
                });

                jq("#travel-type").click(function () {
                    if (jq(this).find("input[type='radio']:checked").val() == "166299") {
                        enable_fields("countries-traveled");
                        jq("#countries-container").show();
                    } else {
                        disable_fields("countries-traveled");
                        jq("#countries-container").hide();
                    }
                });

                jq("#admit-to-hospital").click(function () {
                    if (jq(this).find("input[type='radio']:checked").val() == "166317") {
                        enable_fields("admit-to-hospital-other");
                        enable_fields("admit-to-hospital-cases");
                        jq("#admit-to-hospital-cases-container").show();

                    } else {
                        disable_fields("admit-to-hospital-cases");
                        disable_fields("admit-to-hospital-other");
                        disable_fields("admit-to-hospital-specify-other");
                        jq("#admit-to-hospital-cases-container").hide();
                        jq("#admit-to-hospital-specify-other-container").hide();
                    }
                });

                jq("#admit-to-hospital-cases").change(function () {
                    if (jq(this).find("select").find(":selected").val() == "90002") {
                        enable_fields("admit-to-hospital-specify-other");
                        jq("#admit-to-hospital-specify-other-container").show();
                    } else {
                        disable_fields("admit-to-hospital-specify-other");
                        jq("#admit-to-hospital-specify-other-container").hide();
                    }
                });
                
            });
        }
    </script>

